@model IEnumerable<ExpressVoiture.Data.Voiture>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create">Create New</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            @if (User.IsInRole("Admin"))
            {
                <th>@Html.DisplayNameFor(model => model.CodeVIN)</th>
                <th>@Html.DisplayNameFor(model => model.Annee)</th>
                <th>@Html.DisplayNameFor(model => model.Marque)</th>
                <th>@Html.DisplayNameFor(model => model.Modele)</th>
                <th>@Html.DisplayNameFor(model => model.Finition)</th>
                <th>@Html.DisplayNameFor(model => model.DateAchat)</th>
                <th>@Html.DisplayNameFor(model => model.PrixAchat)</th>
                <th>@Html.DisplayNameFor(model => model.Reparations)</th>
                <th>@Html.DisplayNameFor(model => model.CoutsReparations)</th>
                <th>@Html.DisplayNameFor(model => model.DateDisponibilite)</th>
                <th>@Html.DisplayNameFor(model => model.PrixVente)</th>
                <th>@Html.DisplayNameFor(model => model.DateVente)</th>
                <th>Actions</th>
            }
            else
            {
                <th>@Html.DisplayNameFor(model => model.Annee)</th>
                <th>@Html.DisplayNameFor(model => model.Marque)</th>
                <th>@Html.DisplayNameFor(model => model.Modele)</th>
                <th>@Html.DisplayNameFor(model => model.Finition)</th>
                <th>@Html.DisplayNameFor(model => model.PrixVente)</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @if (User.IsInRole("Admin"))
                {
                    <td>@Html.DisplayFor(modelItem => item.CodeVIN)</td>
                    <td>@Html.DisplayFor(modelItem => item.Annee)</td>
                    <td>@Html.DisplayFor(modelItem => item.Marque)</td>
                    <td>@Html.DisplayFor(modelItem => item.Modele)</td>
                    <td>@Html.DisplayFor(modelItem => item.Finition)</td>
                    <td>@Html.DisplayFor(modelItem => item.DateAchat)</td>
                    <td>@Html.DisplayFor(modelItem => item.PrixAchat)</td>
                    <td>@Html.DisplayFor(modelItem => item.Reparations)</td>
                    <td>@Html.DisplayFor(modelItem => item.CoutsReparations)</td>
                    <td>@Html.DisplayFor(modelItem => item.DateDisponibilite)</td>
                    <td>@Html.DisplayFor(modelItem => item.PrixVente)</td>
                    <td>@Html.DisplayFor(modelItem => item.DateVente)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                }
                else
                {
                    <td>@Html.DisplayFor(modelItem => item.Annee)</td>
                    <td>@Html.DisplayFor(modelItem => item.Marque)</td>
                    <td>@Html.DisplayFor(modelItem => item.Modele)</td>
                    <td>@Html.DisplayFor(modelItem => item.Finition)</td>
                    <td>@Html.DisplayFor(modelItem => item.PrixVente)</td>
                }
            </tr>
        }
    </tbody>
</table>
