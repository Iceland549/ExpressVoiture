@model ExpressVoiture.Data.Voiture

@{
    ViewData["Title"] = "Modifier Voiture";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Champs pré-remplis avec les données de la voiture -->
    <div class="form-group">
        <label asp-for="CodeVIN" class="control-label"></label>
        <input asp-for="CodeVIN" class="form-control" readonly /> <!-- CodeVIN ne peut pas être modifié -->
        <span asp-validation-for="CodeVIN" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Marque" class="control-label"></label>
        <input asp-for="Marque" class="form-control" />
        <span asp-validation-for="Marque" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Modele" class="control-label"></label>
        <input asp-for="Modele" class="form-control" />
        <span asp-validation-for="Modele" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Annee" class="control-label"></label>
        <input asp-for="Annee" class="form-control" type="number" />
        <span asp-validation-for="Annee" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrixVente" class="control-label"></label>
        <input asp-for="PrixVente" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="PrixVente" class="text-danger"></span>
    </div>

    <!-- Champ pour changer l'image -->
    <div class="form-group">
        <label asp-for="ImageUrl" class="control-label"></label>
        <input type="file" name="ImageFile" class="form-control" />
        _logger.LogInformation($"Editing voiture: {voiture.CodeVIN}, Image URL: {Url.Content($"~/images/{voiture.CodeVIN}.jpg")}");
        <p>URL de l'image : @Url.Content($"~/images/{Model.CodeVIN}.jpg")</p>
        <img src="@Url.Content($"~/images/{Model.CodeVIN}.jpg"))" alt="Image actuelle" style="max-width: 200px;" /> <!-- Afficher l'image actuelle -->
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Enregistrer" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
    </div>
</form>
